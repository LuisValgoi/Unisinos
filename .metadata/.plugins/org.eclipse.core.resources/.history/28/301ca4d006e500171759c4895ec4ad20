
public class Clock {
	public static void main(String[] args){
		System.out.println("1:30 in the clock has: " + getClockPointerAngle(1, 30) + " angles between its pointers.");		
	}
	
	private static int getClockPointerAngle(int hour, int minutes){
		int angHours = 0;
		int angMinutes = 0;
		
		if(hour == 12){
			angHours = 0;
		}
		
		// we know that 1 hour has 30º
		angHours = hour * 30 + (minutes/60) * 30;

		// we know that 1 minute has 6º
		angMinutes = minutes * 6;
		
		if(angHours > angMinutes){
			return angHours - angMinutes;
		}else{
			return angMinutes - angHours;
		}
	}
}
